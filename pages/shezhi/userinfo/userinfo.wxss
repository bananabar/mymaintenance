/* pages/shezhi/userinfo/userinfo.wxss */
.container1 {
  background-color: #efeff4;
  width: 100%;
  flex-direction: column;
  display: flex;
  align-items: center;
}

.category-item {
  width: 100%;
  margin: 20rpx 0;
  border-top: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
  background-color: #fff;
}

.detail-item {
  display: flex;
  margin-left: 30rpx;
  border-bottom: 1px solid RGBA(217, 217, 217, 0.4);
  height: 85rpx;
  align-items: center;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-item text {
  flex: 1;
}

.detail-item text:last-child {
  flex: 1;
  text-align: right;
  padding-right: 20rpx;
}

